{
    "name": "personal-website",
    "version": "1.0.0",
    "main": "main.js",
    "repository": "https://github.com/holdengreene/personal-website.git",
    "author": "Holden Greene <holdengreene26@gmail.com>",
    "license": "MIT",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview"
    },
    "devDependencies": {
        "@types/node": "^18.0.4",
        "@typescript-eslint/eslint-plugin": "^5.30.6",
        "@typescript-eslint/parser": "^5.30.6",
        "core-js": "^3.23.4",
        "eslint": "^8.19.0",
        "eslint-config-prettier": "^8.5.0",
        "husky": "^8.0.1",
        "lint-staged": "^13.0.3",
        "normalize.css": "^8.0.1",
        "prettier": "^2.7.1",
        "sass": "^1.53.0",
        "typescript": "^4.7.4",
        "vite": "^3.0.0"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true,
        "semi": true,
        "bracketSpacing": true
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "prettier --write",
            "eslint --fix"
        ],
        "*.scss": [
            "prettier --write"
        ],
        "*.js": [
            "prettier --write"
        ]
    }
