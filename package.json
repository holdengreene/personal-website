{
    "name": "personal-website",
    "version": "1.0.0",
    "main": "main.js",
    "repository": "https://github.com/holdengreene/personal-website.git",
    "author": "Holden Greene <hgreene@cmnhospitals.org>",
    "license": "MIT",
    "scripts": {
        "build": "rm -r -f dist && parcel build src/html/index.html",
        "dev": "parcel src/html/index.html"
    },
    "devDependencies": {
        "@babel/core": "^7.7.2",
        "@babel/preset-env": "^7.7.1",
        "@babel/preset-typescript": "^7.7.2",
        "autoprefixer": "^9.7.1",
        "core-js": "^3.4.1",
        "cssnano": "^4.1.10",
        "husky": "^3.1.0",
        "lint-staged": "^9.4.3",
        "normalize.css": "^8.0.1",
        "parcel-bundler": "^1.12.4",
        "parcel-plugin-purgecss": "^2.1.3",
        "prettier": "^1.19.1",
        "sass": "^1.23.6",
        "tslint": "^5.20.1",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.7.2"
    },
    "browserslist": [
        "> 2%",
        "not dead"
    ],
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true,
        "semi": true,
        "bracketSpacing": true
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "prettier --write",
            "tslint --fix",
            "git add"
        ],
        "*.scss": [
            "prettier --write",
            "git add"
        ],
        "*.js": [
            "prettier --write",
            "git add"
        ]
    }
}
